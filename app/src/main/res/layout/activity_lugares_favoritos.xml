<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondousuario"
    tools:context=".lugares_favoritos">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/design_buttons"
        android:fontFamily="@font/logo_name"
        android:text="@string/tv_lugares_favoritos"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/txt_barberia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/logo_name"
        android:text="@string/tv_barberia"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.004" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="344dp"
        android:layout_height="264dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_barberia"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/barberia" />

    <Button
        android:id="@+id/btn_agendar_cita"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/design_buttons"
        android:fontFamily="@font/logo_name"
        android:onClick="irAgendarCita"
        android:text="@string/btn_agenndar_cita"
        android:textColor="#050505"
        android:textSize="10sp"
        app:backgroundTint="@null"
        app:icon="@drawable/cita"
        app:iconSize="30dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_llamar"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/btn_llamar"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/design_buttons"
        android:fontFamily="@font/logo_name"
        android:onClick="llamarTelefono"
        android:text="@string/btn_llamar"
        android:textColor="#050505"
        app:backgroundTint="@null"
        app:icon="@drawable/tel"
        app:iconGravity="textEnd"
        app:iconSize="30dp"
        app:iconTint="#040303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/btn_ver_perfil"
        android:layout_width="218dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/design_buttons"
        android:fontFamily="@font/logo_name"
        android:onClick="irVerPefil"
        android:text="@string/btn_ver_perfil"
        android:textColor="#050505"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:icon="@drawable/perif"
        app:iconSize="30dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_llamar"
        app:layout_constraintVertical_bias="0.031" />

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/design_buttons"
        android:onClick="iraInterfazUsuario"
        android:text="@string/btn_regresar"
        android:textColor="#040404"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:icon="@android:drawable/ic_media_rew"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_perfil"
        app:layout_constraintVertical_bias="0.846" />
</androidx.constraintlayout.widget.ConstraintLayout>