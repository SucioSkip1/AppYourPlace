<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screens"
    tools:context=".perfil_barberia">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_perfil"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Foto mas reciente"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Promocion actual"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rv_perfil_barberia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="210dp"
        android:layout_height="140dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/btn_promocion_actual"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/barberia" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Direccion"
        android:textColor="#000000"
        android:textColorHint="#101010"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_catalogo" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="213dp"
        android:layout_height="106dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_perfil_barberia"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.152"
        app:srcCompat="@drawable/maps" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="20dp"
        android:text="Coacalco de Berriozabal, Numero 65"
        android:textColor="#000000"
        android:textColorHint="#101010"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rv_perfil_barberia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="236dp"
        android:text="Opiniones mas recientes"
        android:textColor="#000000"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rv_perfil_barberia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/btn_promocion_actual"
        style="@style/dise単o_botones"
        android:layout_width="129dp"
        android:layout_height="66dp"
        android:layout_marginTop="36dp"
        android:text="@string/btn_promocion_actual"
        android:textColor="#191919"
        android:textSize="10dp"
        app:backgroundTint="@null"
        app:icon="@drawable/promo"
        app:iconSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_perfil_barberia"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_ver_catalogo"
        style="@style/dise単o_botones"
        android:layout_width="126dp"
        android:layout_height="67dp"
        android:layout_marginTop="12dp"
        android:onClick="irCatalogo"
        android:text="@string/btn_ver_catalogo"
        android:textColor="#191919"
        android:textSize="10dp"
        app:backgroundTint="@null"
        app:icon="@drawable/catalogo"
        app:iconSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_tomar_foto_local"
        app:layout_constraintEnd_toEndOf="@+id/btn_promocion_actual"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_promocion_actual"
        app:layout_constraintTop_toBottomOf="@+id/btn_promocion_actual"
        app:layout_constraintVertical_bias="0.005" />

    <Button
        android:id="@+id/btn_tomar_foto_local"
        style="@style/dise単o_botones"
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:layout_marginTop="228dp"
        android:onClick="tomarFoto"
        android:text="Contribuye"
        android:textColor="#0B0B0B"
        android:textSize="8sp"
        app:backgroundTint="@null"
        app:icon="@drawable/fto"
        app:iconSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_perfil_barberia"
        app:layout_constraintEnd_toEndOf="@+id/textView17"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/btn_promocion_actual"
        app:layout_constraintVertical_bias="0.352" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="105dp"
        android:layout_height="22dp"
        android:layout_marginTop="100dp"
        android:text="多Estas ahi?"
        android:textColor="#000000"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_tomar_foto_local"
        app:layout_constraintEnd_toEndOf="@+id/btn_ver_catalogo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_ver_catalogo"
        app:layout_constraintTop_toBottomOf="@+id/btn_ver_catalogo"
        app:layout_constraintVertical_bias="0.714" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_perfil_barberia"
        android:layout_width="407dp"
        android:layout_height="112dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.908" />

</androidx.constraintlayout.widget.ConstraintLayout>