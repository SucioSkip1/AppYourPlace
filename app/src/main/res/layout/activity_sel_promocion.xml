<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screens"
    tools:context=".selPromocion">

    <TextView
        android:id="@+id/txt_nombre_promocion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/img_sel_promocion"
        android:layout_width="317dp"
        android:layout_height="216dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombre_promocion"
        app:layout_constraintStart_toStartOf="@+id/txt_nombre_promocion"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre_promocion"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_des_promocion"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/textView40"
        app:layout_constraintStart_toStartOf="@+id/textView40"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <TextView
        android:id="@+id/txt_tiempo_promocion_sel_promoi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/textView44"
        app:layout_constraintStart_toStartOf="@+id/textView44"
        app:layout_constraintTop_toBottomOf="@+id/textView44" />

    <TextView
        android:id="@+id/txt_distancia_promocion_sel_promo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="17dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/textView46"
        app:layout_constraintStart_toStartOf="@+id/textView46"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="Des"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombre_promocion"
        app:layout_constraintStart_toStartOf="@+id/txt_nombre_promocion"
        app:layout_constraintTop_toBottomOf="@+id/img_sel_promocion"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Estas a :"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_tiempo_promocion_sel_promoi"
        app:layout_constraintStart_toStartOf="@+id/txt_tiempo_promocion_sel_promoi"
        app:layout_constraintTop_toBottomOf="@+id/txt_tiempo_promocion_sel_promoi"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Tiempo restante"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView40"
        app:layout_constraintStart_toStartOf="@+id/textView40"
        app:layout_constraintTop_toBottomOf="@+id/txt_des_promocion"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/button10"
        style="@style/diseño_botones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="trazarRura"
        android:text="Trazar ruta"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_distancia_promocion_sel_promo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_distancia_promocion_sel_promo"
        app:layout_constraintTop_toBottomOf="@+id/txt_distancia_promocion_sel_promo"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/button12"
        style="@style/diseño_botones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="verLocal"
        android:text="Ver local"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button13"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/button13"
        app:layout_constraintVertical_bias="0.287"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/button13"
        style="@style/diseño_botones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:onClick="verSimilares"
        android:text="Ver similares"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_distancia_promocion_sel_promo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_distancia_promocion_sel_promo"
        app:layout_constraintTop_toBottomOf="@+id/button10"
        tools:ignore="TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>